{
  "name": "starlight-action",
  "version": "1.0.0",
  "private": true,
  "description": "GitHub Action that builds a Starlight documentation site from your Markdown files",
  "main": "dist/index.js",
  "scripts": {
    "prepare": "git config core.hooksPath .hooks",
    "build": "ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "check": "tsc --noEmit",
    "test:e2e": "npx tsx scripts/local-e2e.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/peteretelej/starlight-action.git"
  },
  "keywords": [
    "github-action",
    "starlight",
    "documentation",
    "astro",
    "markdown"
  ],
  "author": "peteretelej",
  "license": "MIT",
  "dependencies": {
    "@actions/artifact": "^2.2.0",
    "@actions/cache": "^4.0.0",
    "@actions/core": "^1.11.0",
    "@actions/exec": "^1.1.1",
    "@actions/glob": "^0.5.0",
    "@actions/io": "^1.1.3",
    "remark-parse": "^11.0.0",
    "remark-stringify": "^11.0.0",
    "unified": "^11.0.0",
    "unist-util-visit": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@vercel/ncc": "^0.38.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.5.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^3.0.0"
  }
}
